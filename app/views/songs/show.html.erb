
<h2> <%= @song.title %> </h2>

投票数 <b><%= @song.votes_count %></b>

<br>
<div>
  <% unless just_created? %>
    <%= link_to 'この曲に投票する', song_quick_votes_path(song_id: @song), method: :put %>
    |
  <% end %>
  <%= link_to 'コメントを書く', new_song_vote_path(song_id: @song) %>
</div>

<br>
<% @song.comments.take(100).each do |vote| %>
<div class="comment">
  <h4><%= vote.name %></h4>
  <%= vote.body %>
  <div class="comment-date"><%= l(vote.created_at, format: :long) %></div>
</div>
<% end %>

<% if just_created? %>
  <div>
    <%= link_to '他の曲に投票する', songs_path %>
  </div>
<% end %>
<br>
<br>

<%= link_to '順位一覧', ranks_path %>
 | <a href="/">戻る</a>
